<view class="container">
  <!-- 头部信息 -->
  <view class="header">
    <image src="{{avatarUrl}}" class="avatar"></image>
    <text class="username">{{nickName}}</text>
    <button class="share-btn" open-type="share">
      <text class="share-text">分享</text>
    </button>

  </view>

  <!-- 功能模块 -->
  <view class="function-section">
    <view class="function-row">
      <navigator url="/pages/check-in-diary/index" class="function-item">
        <image src="/images/check-in-diary.webp" class="function-icon"></image>
        <text class="function-text">打卡日记</text>
      </navigator>
      <navigator url="/pages/study-diary/index" class="function-item">
        <image src="/images/study-diary.webp" class="function-icon"></image>
        <text class="function-text">自习日记</text>
      </navigator>
      <navigator url="/pages/focus-diary/index" class="function-item">
        <image src="/images/focus-diary.webp" class="function-icon"></image>
        <text class="function-text">专注日记</text>
      </navigator>
      <navigator url="/pages/data-statistics/index" class="function-item">
        <image src="/images/data-statistics.webp" class="function-icon"></image>
        <text class="function-text">数据统计</text>
      </navigator>
    </view>
  </view>

</view>