<view class="page-container">
  <!-- 背景图（使用fixed定位确保全屏显示） -->
  <image src="/images/index/bk.jpg" mode="aspectFill" class="background-image"></image>
  
  <!-- 内容区（使用relative定位） -->
  <view class="content">
    <!-- 头部区域 -->
    <view class="header">
      <view class="user-icons">
        <image src="/images/index/lion.png" class="avatar" />
        <view class="red-dot"></view>
      </view>
    </view>

    <!-- 工具区域 -->
    <view class="tools">
      <view 
        wx:for="{{tools}}" 
        wx:key="name" 
        class="tool-item" 
        bindtap="onToolTap" 
        data-name="{{item.name}}"
      >
        <image src="{{item.icon}}" class="tool-icon" />
        <text class="tool-text">{{item.name}}</text>
      </view>
    </view>
  </view>
</view>