/* 最外层容器 */
.page-container {
    position: relative;
    width: 100%;
    height: 100vh;
  }
  
  /* 背景图解决方案（关键代码） */
  .background-image {
    position: fixed;  /* 固定定位 */
    width: 100vw;     /* 视窗宽度 */
    height: 100vh;    /* 视窗高度 */
    top: 0;
    left: 0;
    z-index: -1;      /* 置于最底层 */
    object-fit: cover; /* 保持比例填满 */
  }
  
  /* 内容区域 */
  .content {
    position: relative;
    z-index: 1;       /* 确保内容在上层 */
    padding: 40rpx;
    min-height: 100vh;
    background-color: rgba(255, 255, 255, 0.85); /* 半透明遮罩 */
  }
  
  /* 头部样式 */
  .header {
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 0;
  }
  
  .user-icons {
    position: relative;
  }
  
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .red-dot {
    position: absolute;
    top: 0;
    right: 0;
    width: 16rpx;
    height: 16rpx;
    background: #ff4d4f;
    border-radius: 50%;
    border: 2rpx solid #fff;
  }
/* 新增轮播样式 */
.banner-container {
    margin: 30rpx 0;
    height: 300rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .banner-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30rpx;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  }
  
  .caption-text {
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  }
  
  /* 指示点自定义 */
  swiper .wx-swiper-dot {
    width: 40rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background: rgba(255,255,255,0.5);
  }
  
  swiper .wx-swiper-dot-active {
    width: 50rpx;
    background: #fff;
  }
    
  /* 工具区域 */
  .tools {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 40rpx;
  }
  
  .tool-item {
    width: 23%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .tool-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
  }
  
  .tool-text {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }