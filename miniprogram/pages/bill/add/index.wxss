/* add.wxss */
.form {
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 16px;
  color: #666;
  margin-bottom: 6px;
}

.input, .textarea, .picker {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background-color: #fdfdfd;
}

.textarea {
  min-height: 80px;
  resize: none;
}

.save-btn {
  background-color: #3c9cff;
  color: white;
  font-size: 18px;
  padding: 12px 0;
  border: none;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.save-btn:active {
  background-color: #2a8adf;
}

/* New styles for type selector */
.type-selector {
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
  border: 1px solid #3c9cff;
  border-radius: 8px;
  overflow: hidden;
}

.type-button {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  font-size: 16px;
  color: #3c9cff;
  background-color: #fff;
  transition: all 0.2s ease;
}

.type-button:first-child {
  border-right: 1px solid #3c9cff;
}

.type-button.active {
  background-color: #3c9cff;
  color: white;
  font-weight: bold;
}