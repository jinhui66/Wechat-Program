.calendar-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.slider {
  display: flex;
  flex-direction: row;
  width: 300%;
  height: 100%;
}

.month {
  flex-shrink: 0;
  padding: 15px;
  box-sizing: border-box;
}

.month.current {
  background: #fff;
}

.header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  text-align: center;
}

.days {
  display: flex;
  flex-wrap: wrap;
}

.day-header, .day {
  width: 14.28%;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.day-header {
  font-weight: bold;
}

.day {
  position: relative;
  border-radius: 50%;
}

.day.today {
  background: #e6f7ff;
  font-weight: bold;
}

.day .mood {
  font-size: 12px;
  margin-top: 2px;
}

.empty {
  visibility: hidden;
}

.indicator {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 8px;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #ddd;
}

.dot.active {
  background: #1890ff;
}

/* 心情选择弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  background: #fff;
  width: 80%;
  border-radius: 10px;
  overflow: hidden;
}

.mood-option {
  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.mood-option:last-child {
  border-bottom: none;
}
.bottom-info {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.alert-box {
  background-color: #f0f0f0;
  padding: 20px;
  margin-top: 20px;
}

.alert-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.alert-buttons {
  display: flex;
  justify-content: flex-end;
}

.subscription {
  margin-top: 20px;
}

.subscription-item {
  display: flex;
  align-items: center;
}

.add-button {
  background-color: #4a90e2;
  color: white;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

