/* pages/mood/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f8ebea;
}

.back-icon {
  position: absolute;
  top: 20px;
  left: 20px;
}

.date-display {
  margin-bottom: 20px;
}

.year, .month {
  font-size: 24px;
  color: #666;
}

.month {
  color: #ff6b6b;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10px;
}

.day-cell {
  width: 50px;
  height: 50px;
  border: 1px solid #ccc;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.day-number {
  font-size: 16px;
  color: #666;
}

.add-button {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #9c6d5d;
  color: white;
  font-size: 24px;
  display: flex;
  justify-content: center;
  align-items: center;
}